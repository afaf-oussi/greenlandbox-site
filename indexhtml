    <!-- JAVASCRIPT -->
    <script>
        // --- 1. Gestion du Menu Mobile ---
        const menuBtn = document.getElementById('menu-btn');
        const mobileMenu = document.getElementById('mobile-menu');
        const mobileLinks = document.querySelectorAll('.mobile-link');

        menuBtn.addEventListener('click', () => {
            mobileMenu.classList.toggle('hidden');
            const icon = menuBtn.querySelector('i');
            icon.classList.toggle('fa-bars');
            icon.classList.toggle('fa-times');
        });

        // Fermer le menu mobile lors d'un clic sur un lien
        mobileLinks.forEach(link => {
            link.addEventListener('click', () => {
                mobileMenu.classList.add('hidden');
                menuBtn.querySelector('i').className = 'fas fa-bars';
            });
        });

        // --- 2. Défilement Fluide ---
        function scrollToId(id) {
            const element = document.getElementById(id);
            if (element) {
                element.scrollIntoView({ behavior: 'smooth' });
            }
        }

        // --- 3. Gestion du Panier (Simulation) ---
        let cartCount = 0;
        const countDisplay = document.getElementById('cart-count');

        function addToCart(name, price) {
            cartCount++;
            countDisplay.innerText = cartCount;
            
            // Animation du badge
            countDisplay.style.transform = 'scale(1.3)';
            setTimeout(() => {
                countDisplay.style.transform = 'scale(1)';
            }, 200);

            // Message de confirmation rapide
            const btn = event.target;
            const originalText = btn.innerText;
            btn.innerText = 'Ajouté !';
            btn.classList.replace('bg-green-100', 'bg-green-500');
            btn.classList.replace('text-green-600', 'text-white');
            
            setTimeout(() => {
                btn.innerText = originalText;
                btn.classList.replace('bg-green-500', 'bg-green-100');
                btn.classList.replace('text-white', 'text-green-600');
            }, 1000);
        }

        // --- 4. Traitement du Formulaire ---
        const orderForm = document.getElementById('orderForm');
        const formMsg = document.getElementById('form-message');

        orderForm.addEventListener('submit', (e) => {
            e.preventDefault();
            
            const name = document.getElementById('userName').value;
            const product = document.getElementById('productSelect').value;

            // Simuler l'envoi
            formMsg.innerText = `Merci ${name} ! Votre commande de "${product}" a été enregistrée avec succès. Notre équipe vous contactera bientôt.`;
            formMsg.classList.remove('hidden');
            
            // Réinitialiser le formulaire
            orderForm.reset();
            
            // Cacher le message après 5 secondes
            setTimeout(() => {
                formMsg.classList.add('hidden');
            }, 6000);
        });

        // --- 5. Effet de navigation active ---
        window.addEventListener('scroll', () => {
            const sections = document.querySelectorAll('section, header');
            const navLinks = document.querySelectorAll('.md\\:flex a');
            
            let current = "";
            sections.forEach(section => {
                const sectionTop = section.offsetTop;
                if (pageYOffset >= sectionTop - 100) {
                    current = section.getAttribute('id');
                }
            });

            navLinks.forEach(link => {
                link.classList.remove('text-green-500', 'border-b-2', 'border-green-600');
                if (link.getAttribute('href').includes(current)) {
                    link.classList.add('text-green-500');
                }
            });
        });
    </script>

